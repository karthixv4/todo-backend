generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Category {
  id Int @id @default(autoincrement())
  name String
  todos Todo[] 
}
model Todo {
id String @id @default(uuid())
title String 
description String?
isCompleted Boolean
createdAt String
dueAt String?
category Category? @relation(fields: [categoryId], references:[id])
categoryId Int?

}
